<%= form_for @site, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :superficie, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :superficie, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :type_site, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :type_site, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :liens, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :liens, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :addresse, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :addresse, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ville, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ville, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :pays, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :pays, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :string, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :string, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tel, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tel, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :horaire, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :horaire, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sites_path, :class => 'btn' %>
  </div>
<% end %>
